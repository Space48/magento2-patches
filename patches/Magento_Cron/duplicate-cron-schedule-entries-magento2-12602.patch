+namespace Magento\Cron\Setup;
+
+use Magento\Framework\Setup\UpgradeSchemaInterface;
+use Magento\Framework\Setup\ModuleContextInterface;
+use Magento\Framework\Setup\SchemaSetupInterface;
+
+/**
+ * Upgrade the Cron module DB scheme
+ */
+class UpgradeSchema implements UpgradeSchemaInterface
+{
+    /**
+     * {@inheritdoc}
+     */
+    public function upgrade(SchemaSetupInterface $setup, ModuleContextInterface $context)
+    {
+        if (version_compare($context->getVersion(), '2.0.0.1', '<')) {
+            $this->addUniqueIndex($setup);
+        }
+    }
+
+    /**
+     * Add unique index
+     *
+     * @param SchemaSetupInterface $setup
+     * @return $this
+     */
+    protected function addUniqueIndex(SchemaSetupInterface $setup)
+    {
+        $setup->getConnection()->addIndex(
+            $setup->getTable('cron_schedule'),
+            $setup->getIdxName('cron_schedule',
+                ['job_code', 'scheduled_at'],
+                \Magento\Framework\DB\Adapter\AdapterInterface::INDEX_TYPE_UNIQUE
+            ),
+            ['job_code', 'scheduled_at'],
+            \Magento\Framework\DB\Adapter\AdapterInterface::INDEX_TYPE_UNIQUE
+        );
+
+        return $this;
+    }
+}
